{
  "name": "whatsapp-crm-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "node --watch index.js",
    "start": "node index.js",
    "lint": "find src test -name '*.js' -print0 | xargs -0 -n1 node --check",
    "test": "node --test",
    "build:frontend": "npm --prefix ../frontend ci --include=dev && npm --prefix ../frontend run build:backend-dist",
    "postinstall": "npm run build:frontend",
    "check": "npm run lint && npm run test"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  }
}
