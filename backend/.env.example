PORT=3001
NODE_ENV=development

# Optional: protect dashboard API on public domains
APP_PASSWORD=

# Optional: public app URL used in setup hints (ex: https://yourdomain.com)
APP_BASE_URL=

# Optional: Meta WhatsApp Cloud API credentials
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=verify-token
# Optional but recommended: used to verify X-Hub-Signature-256 on webhook POST
WHATSAPP_APP_SECRET=

# App business hour defaults
APP_TIMEZONE=Asia/Kolkata
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=19:00
